<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if (flash.count > 0) %>
      <div class="alert alert-danger">
        <button class="close" data-close="alert"></button>
        <% flash.each do |name, msg| %>
          <% if msg.class == Array %>
              <% msg.each do |message| %>
                <%= content_tag :span, message, :id => "flash_#{name}" %>
          <% end %>
          <% else %>
            <%= content_tag :span, msg, :id => "flash_#{name}" %>
          <% end %>
        <% end %>
    </div>

    <% end %>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <%= f.label :email , :class=>"control-label visible-ie8 visible-ie9" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: true, placeholder: 'Email', :class => "form-control form-control-solid placeholder-no-fix" %>
    </div>
    <div class="form-group">
        <%= f.label :password , :class=>"control-label visible-ie8 visible-ie9" %><br />
        <%= f.password_field :password, autocomplete: "off", autofocus: true,  placeholder: 'Password', :class => "form-control form-control-solid placeholder-no-fix" %>
    </div>
<br>
    <div class="form-actions">
        <%= f.submit "Log in", :class=>"btn green uppercase" %>
        <% if devise_mapping.rememberable? -%>
          <%= f.label :remember_me, :class => "rememberme check mt-checkbox mt-checkbox-outline" do %>
                <%= f.check_box :remember_me %>Remember
                <span></span>
          <% end %>
        <% end -%>
    </div>
<br>
<% end %>


<%= render "devise/shared/links" %>
